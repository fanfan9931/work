	<body>
		<div id="box">
			<span class="name">ÂêçÁß∞</span>
			<span class="price" @click="sort()">‰ª∑Ê†º<span class="span" v-if="flag1">{{jiantou}}</span></span> 
			<span class="count">Â∫ìÂ≠ò</span> 
			<div v-for="(shop,index) in shops">
				<span class="name">{{shop.name}}</span> 
				<span class="price">{{shop.price}}/kg</span> 
				<span class="count">{{shop.count}}</span> 
				<button @click="decrease(index)"  class="decrease">-</button>
				<input class="inp" :placeholder="shop.num" />
				<button @click="add(index)" class="add">+</button>
				<span @click="del(index)" class="delete">Âà†Èô§</span>
			</div>
			<div class="allPricr">ÊÄª‰ª∑Ôºö{{allPrice}}</div>
		</div>
	</body>
	<script>
		const vue = new Vue({
			el:"#box",
			data:{
				shops:[{name:"ËãπÊûú",price:"3",count:20,num:5},{name:"È¶ôËïâ",price:"2",count:15,num:8},{name:"Ê¢®Â≠ê",price:"5",count:25,num:3},{name:"Ë•øÁìú",price:"4",count:10,num:1},{name:"Â±±Ê•Ç",price:"1",count:50,num:15},{name:"ÁÅ´ÈæôÊûú",price:"6",count:20,num:4},{name:"ËçâËéì",price:"10",count:20,num:2},{name:"Â±±Á´π",price:"15",count:20,num:5},],
				flag:true,
				flag1:false,
				jiantou:"üëÜ"
			},
			computed:{
				allPrice(){
					let sum = 0
					 this.shops.forEach(function(item){
						 sum += item.price * item.num
					 })
					return sum	
				}
			},
			methods:{
				del(index){
					this.shops.splice(index,1)
				},
				decrease(index){
					if(this.shops[index].num >0){
						this.shops[index].num--
					}
				},
				add(index){
					if(this.shops[index].num < this.shops[index].count){
						this.shops[index].num++
					}
				},
				sort(){
					
					if(this.flag){
						this.shops.sort(function(a,b){
							return a.price - b.price
						})
						this.flag1 = true
						this.jiantou = "üëÜ"
						this.flag = false
					}else{
						this.shops.sort(function(a,b){
							return b.price - a.price
						})
						this.jiantou = "üëá"
						this.flag = true
					}
				},
				
			}
		})
		Array.prototype.remove = function(val) { 
		var index = this.indexOf(val); 
		if (index > -1) { 
			this.splice(index, 1); 
			} 
		};
	</script>
